import wollok.game.*
import rodados.*
import colores.*

program corsasEnElGame {
	// hacer las inicializaciones necesarias 
	game.title("Rodados Game")
	game.width(15)
	game.height(15)
	
	var cachito = new ChevroletCorsa(color=rojo)
	game.addVisual(cachito)
	
	keyboard.up().onPressDo({cachito.moveUp()})
	keyboard.down().onPressDo({cachito.moveDown()})
	keyboard.left().onPressDo({cachito.moveLeft()})
	keyboard.right().onPressDo({cachito.moveRight()})
	
	
	game.start()
}